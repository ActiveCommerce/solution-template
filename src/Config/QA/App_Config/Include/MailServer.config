<!--

Purpose: This include file changes the "MailServer" settings

Notice how "patch:attribute" is used to change the value of attributes that 
are specified for an existing element in the web.config file

-->
<configuration xmlns:patch="http://www.sitecore.net/xmlconfig/">
  <sitecore>
    <settings>
      <setting name="MailServer">
        <patch:attribute name="value">smtp.mycompany.com</patch:attribute>
      </setting>
    </settings>
  </sitecore>
</configuration>