<!--
    Ensures that data sources are saved as GUIDs. This (or some form thereof) is a must for
    any site that heavily utilizes the Page Editor, as Active Commerce does for the home page
    and promo banners.
-->
<configuration xmlns:patch="http://www.sitecore.net/xmlconfig/">
  <sitecore>
    <events>
        <event name="item:saving">
            <handler type="MyActiveCommerce.Events.EnsureDataSourceIsGUID, MyActiveCommerce.Classes"
                     method="OnItemSaving"/>
        </event>
    </events>
  </sitecore>
</configuration>
